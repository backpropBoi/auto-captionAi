{
  "manifest_version": 3,
  "name": "AutoCaptionAI",
  "version": "1.0.0",
  "description": "Adds AI-generated captions to web videos (real-time) with translation support.",
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },
  "action": { "default_popup": "popup.html", "default_title": "AutoCaptionAI" },
  "permissions": ["storage","scripting","activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_ws_client.js","word_renderer.js"],
    "run_at": "document_idle",
    "css": ["overlay.css"]
  }],
  "web_accessible_resources": [{
    "resources": ["overlay.css"],
    "matches": ["<all_urls>"]
  }]
}
